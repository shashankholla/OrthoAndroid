    android:layout_width="match_parent"
    android:fitsSystemWindows="true"
    android:focusableInTouchMode="true"
    android:fillViewport="true">
    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".LoginActivity">

